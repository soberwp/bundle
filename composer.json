{
  "name": "soberwp/bundle",
  "type": "package",
  "license": "MIT",
  "description": "WordPress plugin to enable plugin activation using a JSON, YAML or PHP file.",
  "homepage": "https://github.com/soberwp",
  "authors": [
    {
      "name": "Darren Jacoby",
      "email": "darren@jacoby.co.za",
      "homepage": "https://github.com/darrenjacoby"
    }
  ],
  "keywords": [
    "wordpress"
  ],
  "support": {
    "issues": "https://github.com/soberwp/bundle/issues"
  },
  "require": {
    "php": ">=5.4.0",
    "composer/installers": "^1.5",
    "hassankhan/config": "^1.0",
    "tgmpa/tgm-plugin-activation": "^2.6.1"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "2.*"
  },
  "autoload": {
    "psr-4": {
      "Sober\\Bundle\\": "src/"
    },
    "files": [
      "bundle.php"
    ]
  },
  "scripts": {
    "test": [
      "vendor/bin/phpcs --extensions=php --ignore=vendor/ ."
    ]
  }
}
